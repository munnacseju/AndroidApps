<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E9E9CB"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkOrdername"
            android:text="Name"
            android:textSize="30dp"
            android:textColor="#FF8F00"
            android:textStyle="bold"
            android:textAlignment="center"
            ></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkOrderPhone"
            android:text="Phone"
            android:textSize="20dp"
            android:textColor="#00695C"
            android:textAlignment="center"
            ></TextView>




        <TextView
            android:id="@+id/checkOrderDept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textAlignment="center"
            android:textColor="#00695C"
            android:textSize="20dp"
            ></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkOrderHall"
            android:text="Hall"
            android:textSize="20dp"
            android:textColor="#00695C"
            android:textAlignment="center"
            ></TextView>



        <TextView
            android:id="@+id/checkOrderBatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bartch"
            android:textAlignment="center"
            android:textColor="#00695C"
            android:textSize="20dp"
            ></TextView>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#000"
            ></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView
                android:gravity="right"
                android:layout_width="00dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Book ID: "
                android:textColor="#AD1457"
                android:textSize="20dp"
                ></TextView>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkOrderBookid"
                android:text="Book Id"
                android:textSize="20dp"
                android:textColor="#00695C"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_width="00dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Book Name: "
                android:textColor="#AD1457"
                android:textSize="20dp"
                ></TextView>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkOrderBookName"
                android:text="Book Name"
                android:textSize="20dp"
                android:textColor="#00695C"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_width="00dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Item Number: "
                android:textColor="#AD1457"
                android:textSize="20dp"
                ></TextView>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkOrderItemNumber"
                android:text="Item Number"
                android:textSize="20dp"
                android:textColor="#00695C"
                ></TextView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView
                android:gravity="right"
                android:layout_width="00dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:textColor="#AD1457"
                android:textSize="20dp"
                ></TextView>


            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkOrderPrice"
                android:text="Price"
                android:textSize="20dp"
                android:textColor="#00695C"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView
                android:gravity="right"
                android:layout_width="00dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Total Price: "
                android:textColor="#AD1457"
                android:textSize="20dp"
                ></TextView>


            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkOrderTotalPrice"
                android:text="Total Price"
                android:textSize="20dp"
                android:textColor="#00695C"
                ></TextView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>