<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/dept_cse"
            android:id="@+id/imageViewid"
            android:background="@drawable/rectengle_button_color"
            ></ImageView>

        <TextView
            android:textAlignment="center"
            android:text="Padma Nodir Marjhi..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextViewid"
            android:textSize="30dp"
            android:textColor="#AD1457"
            android:textStyle="bold"
            ></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView
                android:gravity="right"
                android:layout_width="00dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Writer: "
                android:textColor="#AD1457"
                android:textSize="20dp"
                ></TextView>
            <TextView
                android:text="Loading..."
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:id="@+id/writerNameTextViewid"
                android:textSize="20dp"
                android:textColor="#00695C"
                ></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView
                android:gravity="right"
                android:layout_width="00dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Version: "
                android:textColor="#AD1457"
                android:textSize="20dp"
                ></TextView>
            <TextView
                android:text="Loading..."
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:id="@+id/versionTextViewid"
                android:textSize="20dp"
                android:textColor="#00695C"
                ></TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView
                android:gravity="right"
                android:layout_width="00dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:textColor="#AD1457"
                android:textSize="20dp"
                ></TextView>
            <TextView
                android:text="Loading..."
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:id="@+id/priceTextViewid"
                android:textSize="20dp"
                android:textColor="#00695C"
                ></TextView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView
                android:gravity="right"
                android:layout_width="00dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Language: "
                android:textColor="#AD1457"
                android:textSize="20dp"
                ></TextView>
            <TextView
                android:text="Loading..."
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:id="@+id/languageTextViewid"
                android:textSize="20dp"
                android:textColor="#00695C"
                ></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView
                android:gravity="right"
                android:layout_width="00dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Dept: "
                android:textColor="#AD1457"
                android:textSize="20dp"
                ></TextView>

            <TextView
                android:text="Loading..."
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:id="@+id/departmentTextViewid"
                android:textSize="20dp"
                android:textColor="#00695C"
                ></TextView>


        </LinearLayout>





    </LinearLayout>

</LinearLayout>