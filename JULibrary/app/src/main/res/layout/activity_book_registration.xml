<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#F0EDED"
    tools:context=".BookRegistration">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/dept_cse"
                ></ImageView>

            <TextView
                android:textAlignment="center"
                android:background="#FDFBFB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration Processing"
                android:textStyle="bold"
                android:textColor="#0A0A0A"
                android:textSize="30dp"
                android:visibility="gone"
                android:id="@+id/registrationTextViewid"
                ></TextView>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarid"
                android:visibility="gone"
                ></ProgressBar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                >


                <LinearLayout
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#004D40"
                        android:layout_gravity="center"
                        android:text="Depertment"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        ></TextView>

                    <Spinner
                        android:layout_marginLeft="40dp"
                        android:id="@+id/selectdepartmentSpinnerid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        ></Spinner>
                </LinearLayout>

                <LinearLayout
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#004D40"
                        android:layout_gravity="center"
                        android:text="Year"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        ></TextView>

                    <Spinner
                        android:layout_marginLeft="40dp"
                        android:id="@+id/selectYearSpinnerid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        ></Spinner>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:background="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book id:"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        ></TextView>

                    <EditText
                        android:layout_marginLeft="3dp"
                        android:background="#FAF8F8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bookIdEditTextid"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        ></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:background="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Writer:"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        ></TextView>

                    <EditText
                        android:layout_marginLeft="3dp"
                        android:background="#FAF8F8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/writerEditTextid"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        ></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:background="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        ></TextView>


                    <EditText
                        android:layout_marginLeft="3dp"
                        android:background="#F4F7F7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nameEditTextid"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        ></EditText>
                </LinearLayout>



                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:background="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price:"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        ></TextView>



                    <EditText
                        android:layout_marginLeft="3dp"
                        android:background="#FFFEFE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/priceEditTextid"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        ></EditText>
                </LinearLayout>



                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:background="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version:"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        ></TextView>

                    <EditText
                        android:layout_marginLeft="3dp"
                        android:background="#FAF8F8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/versionEditTextid"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        ></EditText>
                </LinearLayout>


                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:background="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Language:"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        ></TextView>

                    <EditText
                        android:layout_marginLeft="3dp"
                        android:background="#FAF8F8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/languageEditTextid"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#004D40"
                        ></EditText>

                </LinearLayout>

            </LinearLayout>



            <Button
                android:layout_marginTop="3dp"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/profileImageSelectorButtonid"
                android:text="Select a Profile Image"
                android:textStyle="bold"
                android:textColor="#004D40"
                ></Button>

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:id="@+id/profileImageid"
                android:visibility="gone"
                ></ImageView>

            <Button
                android:textStyle="bold"
                android:textColor="#004D40"
                android:layout_marginTop="5dp"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Conform Registration"
                android:id="@+id/registrationButtonid"
                ></Button>


        </LinearLayout>
    </ScrollView>



</LinearLayout>